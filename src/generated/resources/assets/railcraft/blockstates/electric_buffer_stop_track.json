{
  "multipart": [
    {
      "when": {
        "facing": "north"
      },
      "apply": {
        "model": "railcraft:block/buffer_stop"
      }
    },
    {
      "when": {
        "facing": "south"
      },
      "apply": {
        "model": "railcraft:block/buffer_stop",
        "y": 180
      }
    },
    {
      "when": {
        "facing": "east"
      },
      "apply": {
        "model": "railcraft:block/buffer_stop",
        "y": 90
      }
    },
    {
      "when": {
        "facing": "west"
      },
      "apply": {
        "model": "railcraft:block/buffer_stop",
        "y": 270
      }
    },
    {
      "when": {
        "shape": "north_south"
      },
      "apply": {
        "model": "railcraft:block/electric_flex_track"
      }
    },
    {
      "when": {
        "shape": "east_west"
      },
      "apply": {
        "model": "railcraft:block/electric_flex_track",
        "y": 90
      }
    }
  ]
}